<% content_for :title, "New post" %>

<h1 style="font-size: 2rem; color: #333; text-align: center; margin-bottom: 20px;">
  New Post
</h1>

<div style="max-width: 600px; margin: 20px auto;">
  <%= render "form", post: @post %>
</div>

<div style="text-align: center; margin-top: 20px;">
  <%= link_to "Back to posts", posts_path, style: "display: inline-block; padding: 10px 20px; background-color: #007BFF; color: white; text-decoration: none; border-radius: 5px; font-weight: bold;" %>
</div>
