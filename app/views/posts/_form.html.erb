<%= form_with(model: post, class: "needs-validation", novalidate: true) do |form| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.submit "Submit Post", class: "btn btn-primary" %>
  </div>
<% end %>
