<% content_for :title, "New comment" %>

<h1 style="font-size: 2rem; color: #333; text-align: center; margin-bottom: 20px;">
  New Comment
</h1>

<div style="max-width: 600px; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
  <%= render "form", comment: @comment %>
</div>

<div style="text-align: center; margin-top: 20px;">
  <%= link_to "Back to comments", comments_path, style: "display: inline-block; padding: 10px 20px; background-color: #007BFF; color: white; text-decoration: none; border-radius: 5px; font-weight: bold;" %>
</div>

