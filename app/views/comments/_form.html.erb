<%= form_with(model: comment, class: "needs-validation", novalidate: true) do |form| %>
  <% if comment.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h4>
      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :post_id, class: "form-label" %>
    <%= form.text_field :post_id, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :user_id, class: "form-label" %>
    <%= form.text_field :user_id, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Submit Comment", class: "btn btn-primary" %>
  </div>
<% end %>
